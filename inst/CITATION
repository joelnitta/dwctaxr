citHeader("To cite dwctaxon in publications use:")

bibentry(
  bibtype    = "Manual",
  title    = "The dwctaxon R package for working with Darwin Core Taxon data",
  author   = c(
               as.person("Joel H. Nitta"),
               as.person("Wataru Iwasaki")
             ),
  year     = 2023,
  url      = "https://github.com/ropensci/dwctaxon",
  textVersion = paste(
    "Nitta and Iwasaki (2023).",
    "The dwctaxon R package for working with Darwin Core Taxon data.",
    "https://github.com/ropensci/dwctaxon"
  )
)
